{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": false,
    "jsx": "react",
    "target": "ESNext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom"
    ],
    "paths": {
      "@api/*": ["./api/*"],
      "@features/*": ["./features/*"],
      "@lib/*": ["./lib/*"],
      "@ui/*": ["./ui/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
